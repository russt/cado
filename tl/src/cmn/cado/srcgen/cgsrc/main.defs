sub dumphash
{
    my ($ref, $name) = @_;

    my ($kk, $vv);
    print STDERR "\n========== $name\n";
    foreach $kk (sort keys %{$ref}) {
        printf STDERR "%s{'%s'}\t='%s'\n", $name, $kk, ${$ref}{$kk};
